<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Wyrmquest</title>
    <link rel="stylesheet" href="~/css/game.css" asp-append-version="true" />
</head>
<body>
    @RenderBody()

    <script>
        function togglePanel(panelId) {
            const panels = ['statsPanel', 'inventoryPanel', 'settingsPanel'];
            panels.forEach(id => {
                const panel = document.getElementById(id);
                if (id === panelId) {
                    panel.style.display = (panel.style.display !== 'block') ? 'block' : 'none';
                } else {
                    panel.style.display = 'none';
                }
            });
        }
    </script>
</body>
</html>